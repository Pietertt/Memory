<Window x:Class="Memory.startup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memory"
        mc:Ignorable="d"
        Title="Start" Height="450" Width="800" ResizeMode="NoResize">
    <Canvas x:Name="mainCanvas">
        <Label x:Name="label_start" Style="{ StaticResource labelStyle }" Canvas.Top="45" Canvas.Left="45">
            <TextBlock TextDecorations="Underline">
                MEMORY GAME
            </TextBlock>
        </Label>
        <Button x:Name="button_start" Click="startGame" Style="{ StaticResource buttonStyle }" Canvas.Top="36" Canvas.Right="36">Start game</Button>
        <Button x:Name="button_load" Click="loadGame" Style="{ StaticResource buttonStyle }" Canvas.Top="132" Canvas.Right="36">Load game</Button>
        <Button x:Name="button_highscore" Click="startHighscores" Style="{ StaticResource buttonStyle }" Canvas.Top="228" Canvas.Right="36">Highscores</Button>
        <Button x:Name="button_close" Click="quitGame" Style="{ StaticResource buttonStyle }" Canvas.Top="324" Canvas.Right="36">Afsluiten</Button>

        <Canvas.Background>
            <ImageBrush ImageSource="Images\BgImages\start_background.jpg"  Stretch="Fill"/>
        </Canvas.Background>
    </Canvas>
</Window>
