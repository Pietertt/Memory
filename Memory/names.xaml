<Window x:Class="Memory.names"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memory"
        mc:Ignorable="d"
        Title="names" Height="450" Width="800" ResizeMode="NoResize">
    <Canvas>
        <Label Style="{ StaticResource smallLabel }" Canvas.Top="16" Canvas.Left="36">Speler 1</Label>
        <Label Style="{ StaticResource smallLabel }" Canvas.Top="88" Canvas.Left="36">Speler 2</Label>
        <TextBox x:Name="textbox_player_1" Style="{ StaticResource textBoxStyle }" Canvas.Top="36" Canvas.Left="36"></TextBox>
        <TextBox x:Name="textbox_player_2" Style="{ StaticResource textBoxStyle }" Canvas.Top="108" Canvas.Left="36"></TextBox>
        <Button x:Name="button_back" Click="goBack" Style="{ StaticResource buttonStyle }" Canvas.Top="36" Canvas.Right="36">Terug</Button>
        <Button x:Name="button_start" Click="startGame" Style="{ StaticResource buttonStyle }" Canvas.Top="180" Canvas.Left="36">Start game</Button>
        <Canvas.Background>
            <ImageBrush ImageSource="Images\BgImages\name_background.jpg"  Stretch="Fill"/>
        </Canvas.Background>
    </Canvas>
</Window>
